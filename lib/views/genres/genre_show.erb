<html>
  <body>
    <!-- should include the total unique artists and song counts in the genre -->
    <h1><%= o.name %> - <%= o.songs.uniq.count %> songs by <%= o.artists.uniq.count %> artists</h1>
    <ul>
      <% o.songs.sort_by {|s| [s.name, s.artist.name]}.each do |s| %>
        <li><a href="<%= "../artists/#{s.artist.name.gsub(' ','_')}.html" %>"><%= "#{s.artist.name}" %></a> - <em><a href="<%= "../songs/#{s.name.gsub(' ', '_')}.html" %>"><%= "#{s.name}" %></a></em></li>
      <% end %>
    </ul>
  </body>
</html>